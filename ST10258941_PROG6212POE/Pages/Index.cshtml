@page
@model IndexModel
@{
    ViewData["Title"] = "CMCS Home";
}

<!-- Center-aligned container for the welcome message and features list -->
<div class="text-center">
    <!-- Main heading for the page -->
    <h1 class="display-4">Welcome to the Contract Monthly Claim System (CMCS)</h1>
    <!-- Brief description of the system -->
    <p>This system is designed to streamline the process of submitting and approving monthly claims for Independent Contractor (IC) lecturers.</p>

    <!-- Section for listing features of the CMCS -->
    <div class="mt-4">
        <h3>Features of CMCS:</h3>
        <!-- Unstyled list of features -->
        <ul class="list-unstyled">
            <li>- Submit monthly claims with ease.</li>
            <li>- Upload supporting documents for claims.</li>
            <li>- Track the status of claims from submission to approval.</li>
            <li>- Ensure accurate and transparent claim management.</li>
        </ul>
    </div>
</div>
