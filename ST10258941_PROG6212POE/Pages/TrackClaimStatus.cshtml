@page
@model ST10258941_PROG6212POE.Pages.TrackClaimStatusModel
@{
    ViewData["Title"] = "Track Claim Status";
}

<div class="container mt-4">
    <h2>Track Your Claim Status</h2>
    <p>Below is a list of your submitted claims and their current status:</p>

    <table class="table table-striped mt-4">
        <thead>
            <tr>
                <th>Claim ID</th>
                <th>Hours Worked</th>
                <th>Hourly Rate</th>
                <th>Total Amount</th>
                <th>Status</th>
                <th>Comments</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var claim in Model.Claims)
            {
                <tr>
                    <td>@claim.ClaimId</td>
                    <td>@claim.HoursWorked</td>
                    <td>@claim.HourlyRate.ToString("C")</td>
                    <td>@claim.TotalAmount.ToString("C")</td>
                    <td>@claim.Status</td>
                    <td>@claim.Comments</td>
                </tr>
            }
        </tbody>
    </table>
</div>
