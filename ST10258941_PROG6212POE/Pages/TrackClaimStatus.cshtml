@page
@model ST10258941_PROG6212POE.Pages.TrackClaimStatusModel
@{
    ViewData["Title"] = "Track Claim Status";
}

<!-- Container for the track claim status page -->
<div class="container mt-4">
    <!-- Page heading -->
    <h2>Track Your Claim Status</h2>
    <!-- Description of the page content -->
    <p>Below is a list of your submitted claims and their current status:</p>

    <!-- Table displaying the list of claims -->
    <table class="table table-striped mt-4">
        <thead>
            <tr>
                <!-- Table headers -->
                <th>Claim ID</th>
                <th>Hours Worked</th>
                <th>Hourly Rate</th>
                <th>Total Amount</th>
                <th>Additional Notes</th>
                <th>Status</th>
                <th>Comments</th>
            </tr>
        </thead>
        <tbody>
            <!-- Loop through each claim in the model and display in table rows -->
            @foreach (var claim in Model.Claims)
            {
                <tr>
                    <!-- Claim details in table cells -->
                    <td>@claim.ClaimId</td>
                    <td>@claim.HoursWorked</td>
                    <td>@claim.HourlyRate.ToString("C")</td> <!-- Formatting as currency -->
                    <td>@claim.TotalAmount.ToString("C")</td> <!-- Formatting as currency -->
                    <td>@claim.AdditionalNotes</td>
                    <td>@claim.Status</td>
                    <td>@claim.Comments</td>
                </tr>
            }
        </tbody>
    </table>
</div>
