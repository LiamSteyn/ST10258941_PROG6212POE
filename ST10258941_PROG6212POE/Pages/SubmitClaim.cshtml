@page
@model ST10258941_PROG6212POE.Pages.SubmitClaimModel
@{
    ViewData["Title"] = "Submit Claim";
}

<!-- Container for the submit claim page -->
<div class="container mt-4">
    <!-- Page heading -->
    <h2>Submit Monthly Claim</h2>
    <!-- Form for submitting a claim -->
    <form asp-action="SubmitClaim" method="post" enctype="multipart/form-data">
        <!-- Input field for Lecturer ID -->
        <div class="form-group">
            <label asp-for="ClaimViewModel.LecturerId">Lecturer ID</label>
            <input type="number" class="form-control" asp-for="ClaimViewModel.LecturerId" required />
        </div>
        <!-- Input field for Hours Worked -->
        <div class="form-group">
            <label asp-for="ClaimViewModel.HoursWorked">Hours Worked</label>
            <input type="number" class="form-control" asp-for="ClaimViewModel.HoursWorked" required />
        </div>
        <!-- Input field for Hourly Rate -->
        <div class="form-group">
            <label asp-for="ClaimViewModel.HourlyRate">Hourly Rate</label>
            <input type="number" class="form-control" asp-for="ClaimViewModel.HourlyRate" step="0.01" required />
        </div>
        <!-- File upload field for Supporting Document -->
        <div class="form-group">
            <label asp-for="ClaimViewModel.SupportingDocument">Upload Supporting Document</label>
            <input type="file" class="form-control" asp-for="ClaimViewModel.SupportingDocument" required />
        </div>
        <!-- Submit button for the form -->
        <button type="submit" class="btn btn-primary btn-padding-top btn-margin-top">Submit Claim</button>
    </form>
</div>
