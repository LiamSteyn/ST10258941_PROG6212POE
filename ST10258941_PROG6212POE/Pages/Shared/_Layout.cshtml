<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Claim System</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ST10258941_PROG6212POE.styles.css" asp-append-version="true" />
    <style>
        html {
            font-size: 14px;
        }

        .btn:focus, .btn:active:focus, .btn-link.nav-link:focus, .form-control:focus, .form-check-input:focus {
            box-shadow: 0 0 0 0.1rem #ccc, 0 0 0 0.25rem #555;
        }

        html {
            position: relative;
            min-height: 100%;
        }

        /* Basic Styles */
        body {
            font-family: 'Roboto', Arial, sans-serif; /* Improved font */
            background-color: #f0f0f0; /* Light grey background */
            color: #333; /* Dark grey text color */
            margin: 0;
            padding: 0;
        }

        .container {
            margin-top: 20px;
        }

        /* Headers */
        h1, h2 {
            color: #222; /* Darker grey for headers */
        }

        /* Table Styles */
        .table {
            width: 100%;
            margin-bottom: 1rem;
            color: #333;
        }

        .table th {
            background-color: #d6d6d6; /* Light grey table header */
            color: #222;
        }

        .table td, .table th {
            padding: 0.75rem;
            vertical-align: top;
            border-top: 1px solid #ccc;
        }

        .table-striped tbody tr:nth-of-type(odd) {
            background-color: #e9e9e9; /* Slightly lighter grey for rows */
        }

        /* Buttons */
        .btn {
            font-size: 1rem;
            padding: 0.5rem 1rem;
            border-radius: 0.25rem;
            color: #fff;
        }

        .btn-success {
            background-color: #4caf50; /* Green */
            border-color: #4caf50;
        }

        .btn-success:hover {
            background-color: #388e3c; /* Darker green */
            border-color: #2c6b2f;
        }

        .btn-danger {
            background-color: #f44336; /* Red */
            border-color: #f44336;
        }

        .btn-danger:hover {
            background-color: #d32f2f; /* Darker red */
            border-color: #c62828;
        }

        .btn-primary {
            background-color: #007bff; /* Blue */
            border-color: #007bff;
        }

        .btn-primary:hover {
            background-color: #0056b3; /* Darker blue */
            border-color: #004a8b;
        }

        .form-control {
            display: block;
            width: 100%;
            padding: 0.375rem 0.75rem;
            font-size: 1rem;
            line-height: 1.5;
            color: #333;
            background-color: #fff; /* White background for form controls */
            border: 1px solid #ccc;
            border-radius: 0.25rem;
        }

        .mt-1 {
            margin-top: 0.25rem;
        }

        .mt-4 {
            margin-top: 1.5rem;
        }

        .text-center {
            text-align: center;
        }

        .btn-padding-top {
            padding-top: 0.75rem;
        }

        .btn-margin-top {
            margin-top: 1rem; 
        }

        a {
            color: #007bff; /* Blue for links */
        }

        a:hover {
            color: #0056b3; /* Darker blue for hover effect */
        }
        
        /* Custom Styles for Layout */
        .navbar {
            background-color: #fff; /* White background for navbar */
        }
        
        .navbar-nav .nav-link {
            color: #333; /* Dark grey for navbar links */
        }

        .navbar-nav .nav-link:hover {
            color: #007bff; /* Blue for hover effect on links */
        }

        .footer {
            background-color: #fff; /* White background for footer */
            color: #333; /* Dark grey text color */
            padding: 1rem 0;
        }
        
        .footer a {
            color: #007bff; /* Blue for footer links */
        }

        .footer a:hover {
            color: #0056b3; /* Darker blue for hover effect */
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">ST10258941_PROG6212POE</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Login">Login</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/SubmitClaim">Make a Claim</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/TrackClaimStatus">Claim Status</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/ManageClaims">Manage Claims</a>
                        </li>
                        
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - ST10258941_PROG6212POE - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>